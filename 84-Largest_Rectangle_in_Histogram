def largestRectangleArea(heights):
    max_area = 0
    stack = []  
    n = len(heights)

    for i in range(n):
        while stack and heights[stack[-1]] >= heights[i]:
            current_height = heights[stack.pop()]
            width = i if not stack else i - stack[-1] - 1
            max_area = max(max_area, current_height * width)
        stack.append(i)
    while stack:
        current_height = heights[stack.pop()]
        width = n if not stack else n - stack[-1] - 1
        max_area = max(max_area, current_height * width)
    return max_area
heights1 = [2, 1, 5, 6, 2, 3]
print(f"Largest rectangle area for {heights1}: {largestRectangleArea(heights1)}")
heights2 = [6, 2, 5, 4, 5, 1, 6]
print(f"Largest rectangle area for {heights2}: {largestRectangleArea(heights2)}")
